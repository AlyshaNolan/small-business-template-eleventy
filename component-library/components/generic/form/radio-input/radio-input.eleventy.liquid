{% assign_local c = "c-radio-input" %}
<div class="{{ c }}">
    <input class="{{ c }}__input" 
        type="radio" 
        id="{{ label }}" 
        name="{{ id }}" 
        {% if checked %}checked{% endif %} 
        {% if required %}required{% endif %}>
    <label class="{{ c }}__label" for="{{ label }}">{{ label }}</label>
</div>