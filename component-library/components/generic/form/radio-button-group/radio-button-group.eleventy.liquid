{% assign_local c = "c-radio-button-group" %}
<div class="{{ c }}">
    <fieldset class="{{ c }}__group" onClick="validateInputGroup(this)" {% if helper_text %}aria-describedby="{{ id }}--helper"{% endif %}>
        <legend class="{{ c }}__group__label">{{ label }}</legend>
        <div class="{{ c }}__group__inputs {{ c }}__group__inputs--arrangement-{{ arrangement }}">
            {% assign_local group_name = id %}
            {% for item in radio_buttons %}
                {% bookshop "generic/form/radio-input" bind:item required:required group_name:group_name %}
            {% endfor %}
        </div>

    </fieldset>

    {% if helper_text %}
        <div class="{{ c }}__helper">
            {% bookshop "generic/icon" svg_icon:"outline/information-circle" icon_size:'extra-small' rounded_border:false color:'var(--brand-grey-000, #F9F9FB)' %}
            <p class="{{ c }}__helper__text" id="{{ id }}--helper" role="tooltip">{{ helper_text }}<p>
        </div>
    {% endif %}

    <div class="{{ c }}__error error">
        {% bookshop "generic/icon" svg_icon:"outline/x-circle" icon_size:'extra-small' rounded_border:false color:'var(--error-red-300, #BF2323)' %}
        <p class="{{ c }}__error__text error__text">Error Message<p>
    </div>

</div>