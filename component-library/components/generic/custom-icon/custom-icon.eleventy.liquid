{% assign_local c = "c-icon" %}

<div class="c-custom-icon {{ c }} {{ c }}--{{ icon_size }} {{ c }}--{{ icon_type }} {% if rounded_border %}{{c}}--round{% endif %}" style="--c-icon-color: {{ color }}">
    {% if icon_path contains '.svg' and env_bookshop_live %}
        <div class="{{ c }}__image" style="--url: url('{{ icon_path }}')"></div>
    {% elsif icon_path contains '.svg' %}
         {{ '/src' | append: icon_path  | svgContents: "c-icon__svg" }}
    {% else %}
        {% bookshop "generic/image" image_path:icon_path image_alt:'' %}
    {% endif %}
</div>
