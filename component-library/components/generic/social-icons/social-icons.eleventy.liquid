{% assign_local c = "c-social-icons" %}

<div class="{{ c }}" style="{% if style.icon_background_hover_color %}--hover-color: {{ style.icon_background_hover_color }};{% endif %} {% if style.icon_color %}--fill-color: {{ style.icon_color }};{% endif %} {% if style.icon_hover_color %}--fill-color-hover: {{ style.icon_hover_color }};{% endif %}">
    {% for item in social_media_links %}
          <a class="{{ c }}__icon" href="{{ item.link_url }}" target="_blank" rel="noopener noreferrer">
              {% bookshop "generic/custom-icon" icon_path:item.icon_path icon_size:'small' icon_type:'solid' rounded_border:true color:'transparent' %}
          </a>
    {% endfor %}
</div>