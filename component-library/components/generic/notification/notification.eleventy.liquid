<div class="c-notification">
    {% bookshop "generic/icon" hero_icon_name:"information-circle" icon_type:"solid" icon_size:"small" rounded_border:false color:"var(--interaction-blue-500, #163D91)" %}
    <div class="c-notification__text">
        {% if heading %}<p class="c-notification__text__heading">{{ heading }}</p>{% endif %}
        {% if text %}<p>{{ text }}</p>{% endif %}
    </div>
    <button class="c-notification__button" onclick="this.parentNode.style.display = 'none'">{% bookshop "generic/icon" hero_icon_name:"x-mark" icon_type:"solid" icon_size:"small" rounded_border:false color:"var(--interaction-blue-500, #163D91)" %}</button>
</div>