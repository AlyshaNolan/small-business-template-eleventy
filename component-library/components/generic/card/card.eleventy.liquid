{%  assign c = 'c-card' %}
<div class={{c}}>
    {% if icon %}
        {% bookshop "generic/icon" bind:icon %}
    {% else %}
        {% comment %} TODO: put image component here {% endcomment %}
    {% endif %}
    
    {% bookshop "generic/component-heading" bind:headings %}

    <div class="{{c}}--content">{{ details }}</div>
    <div class="{{c}}__buttons">
        {% bookshop "generic/button" text:link_label variant:"primary" disabled:false arrow:"arrow-right" url:link_url %}
    </div>
</div>
