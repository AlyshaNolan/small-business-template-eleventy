{% if hero %}
    {% bookshop {{hero._bookshop_name}} bind:hero %}
{% elsif permalink != "/components/" %}
    {% capture default_hero %}
        content:
            heading:
                primary_heading: {{ title }}
        styles:
            content_alignment: center
            background_variant: secondary
    {% endcapture %}
    {% assign default_hero = default_hero | ymlify %}
    {% bookshop "sections/hero--simple" bind: default_hero %}
{% endif %}