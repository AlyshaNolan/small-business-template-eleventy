{% assign_local c = "c-hero--simple" %}
<section class="{{ c }} {{ c }}--content-align-{{ styles.content_alignment }} component
            {% if styles.background_variant == 'secondary' %} 
                component--secondary
            {% endif %}">
        {% capture heading %}
            eyebrow_headline: {{content.heading.eyebrow_headline}}
            eyebrow_headline_hierarchy: "h2"
            primary_heading: {% if use_page_title %}"Page title will display here"{% else %}{{content.heading.primary_heading}}{% endif %}
            primary_heading_hierarchy: "h1"
        {% endcapture %}
        {% assign_local heading = heading | ymlify %}
        {% if content.heading %}{% bookshop "generic/component-heading" bind:heading %}{% endif %}
</section>