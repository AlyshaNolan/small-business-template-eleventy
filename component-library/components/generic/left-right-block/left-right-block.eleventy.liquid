{% assign_local c = "c-left-right-block" %}

<div class="{{ c }} component {% if styles.orientation == "Right" %}{{ c }}--right{% endif %} {% if styles.background_variant == "Dark" %} 
  component--dark
{% endif %}">
  <div class="{{ c }}__content">
    <div class="{{ c }}__content-wrapper">
      {% if social_icons %}
        {% bookshop "generic/social-icons" bind: social_icons %}
      {% endif %}
      {% if heading %}
        {% bookshop "generic/component-heading" bind: heading %}
      {% endif %}
      {% if contact_details %}
        <div class="{{ c }}__content-text">
          {{ contact_details | markdownify }}
        </div>
      {% endif %}
      {% if author_name %}
        <p class="{{ c }}__content-text">
          {{ author_name }}
        </p>
      {% endif %}
      {% if icons %}
        <div class="{{ c }}__icons">
          {% for icon in icons %}
            {% bookshop "generic/labelled-icon" bind: icon %}
          {% endfor %}
        </div>
      {% endif %}
      {% if buttons %}
        <div class="{{ c }}__buttons">
          {% for button in buttons %}
            {% bookshop "generic/button" bind: button %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="{{ c }}__media">
    {% if image %}
      {% bookshop "generic/image" bind: image %}
    {% endif %}
  </div>
</div>