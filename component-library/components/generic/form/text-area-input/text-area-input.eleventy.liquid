{% assign_local c = "c-text-area-input" %}
<div class="{{ c }}">
    <label class="{{ c }}__label" for="{{ name_and_id }}">{{ label }}{% if required %} *{% endif %}</label>
    <textarea class="{{ c }}__input"
        id="{{ name_and_id }}" 
        name="{{ name_and_id }}" 
        placeholder="{{ placeholder }}"
        {% if required %}required{% endif %}
        rows="{{ rows }}"></textarea>

    {% if helper_text %}
        <div class="{{ c }}__helper">
            {% bookshop "generic/icon" svg_icon:"outline/information-circle" icon_size:'extra-small' rounded_border:false color:'var(--brand-grey-000, #F9F9FB)' %}
            <p class="{{ c }}__helper__text">{{ helper_text }}<p>
        </div>
    {% endif %}

</div>