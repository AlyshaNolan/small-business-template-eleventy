{% assign_local c = "c-radio-input" %}
<div class="{{ c }}">
    <input class="{{ c }}__input" 
        type="radio" 
        id="{{ ratio_id }}" 
        name="{{ group_name }}"
        value="{{ label }}"
        {% if checked %}checked{% endif %} 
        {% if required %}required{% endif %}>
    <label class="{{ c }}__label" for="{{ ratio_id }}">{{ label }}</label>
</div>