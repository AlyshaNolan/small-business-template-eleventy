{%  assign_local c = 'c-simple-text-block' %}


<section {% if content.id %}id="{{ content.id }}"{% endif %} class='{{c}} component 
{% if styles.background_variant == 'secondary' %} 
    component--secondary
{% endif %} '>

{% if content.heading or content.text %}
    <div class='{{c}}__content'>
        {% bookshop "generic/heading" bind:content.heading %}
        {% bookshop "generic/text-block" bind:content.text %}
    </div>
{% endif %}
</section>
