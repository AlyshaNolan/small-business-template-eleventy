{% assign_local c = "c-left-right-block--featured-map" %}

{%  assign featured_map_icons = "" %}

{% capture heading %}
  primary_heading: {{ content.heading }}
{% endcapture %}
{% assign_local heading = heading | ymlify %}

{% for detail in content.contact_details %}
  {% capture labelled-icon %}
    - bookshop: generic/labelled-icon
      arrangement: inline
      text: "{{ detail.text }}"
      icon:
        bookshop: generic/icon
        hero_icon_name: {{ detail.hero_icon_name }}
        icon_size: small
        icon_type: outline
        rounded_border: true
        color: var(--main-text-color)
  {% endcapture %}
  {%  assign featured_map_icons = featured_map_icons | append: labelled-icon %}
{% endfor %}

{% assign featured_map_icons = featured_map_icons | ymlify %}

<section class="{{ c }}">
  {% bookshop "generic/left-right-block" display_social_icons:content.display_social_icons heading:heading text:content.description icons:featured_map_icons buttons:content.buttons map:content.map image_alignment:styles.map_alignment background_variant:styles.background_variant %}
</section>